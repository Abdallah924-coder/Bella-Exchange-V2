<%- include('partials/header') %>
<section class="panel auth-box">
  <h1>Reinitialiser le mot de passe</h1>
  <% if (error) { %><p class="error"><%= error %></p><% } %>
  <% if (token) { %>
    <form method="POST" action="/auth/reset-password" class="form-grid">
      <input type="hidden" name="token" value="<%= token %>" />
      <label>Nouveau mot de passe
        <input type="password" name="password" minlength="8" required />
      </label>
      <label>Confirmer le mot de passe
        <input type="password" name="confirmPassword" minlength="8" required />
      </label>
      <button class="btn" type="submit">Mettre a jour</button>
    </form>
  <% } %>
  <p><a href="/login">Retour connexion</a></p>
</section>
<%- include('partials/footer') %>
