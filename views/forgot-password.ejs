<%- include('partials/header') %>
<section class="panel auth-box">
  <h1>Mot de passe oublie</h1>
  <% if (success) { %><p class="ok"><%= success %></p><% } %>
  <% if (error) { %><p class="error"><%= error %></p><% } %>
  <form method="POST" action="/auth/forgot-password" class="form-grid">
    <label>Email
      <input type="email" name="email" required />
    </label>
    <button class="btn" type="submit">Envoyer le lien</button>
  </form>
  <p><a href="/login">Retour connexion</a></p>
</section>
<%- include('partials/footer') %>
